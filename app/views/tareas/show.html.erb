<h3>
Comentarios en esta tarea : <%= @tarea.comentarios.count%>  
<%#= link_to "#{@tarea.comentarios.count}"%>  
</h3>

<!-- inserta tabla en show -->

<table class="table table-striped">
  <thead>
    <tr>
      <th><%= model_class.human_attribute_name(:comentario) %></th>
      <th><%= model_class.human_attribute_name(:user_id) %></th>
      <th><%= model_class.human_attribute_name(:created_at) %></th>
    </tr>
  </thead>
  <tbody>
    <% @tarea.comentarios.each do |comentario| %>
      <tr>
        <td><%= comentario.comentario %></td>
        <td><%= comentario.user.email %></td>
        <td><%=l comentario.created_at %></td>
      </tr>
    <% end %>
  </tbody>
</table>
<!--fin inserta tabla en show  -->



