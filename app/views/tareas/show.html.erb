<%- model_class = Tarea -%>
<div class="page-header">
  <h1><%=t '.title', :default => model_class.model_name.human.titleize %></h1>
</div>
<!-- Creado por: <%= @tarea.user_id %> -->
<dl class="dl-horizontal">
  <dt><strong><h3><%= model_class.human_attribute_name(:problema) %>:</h3></strong></dt>
  <dd><h3><%= @tarea.comentario %></h3></dd>
  <dt><strong><%= model_class.human_attribute_name(:empleado_id) %>:</strong></dt>
  <dd><%= @tarea.empleado.empleado %></dd>
  <dt><strong><%= model_class.human_attribute_name(:tipo_id) %>:</strong></dt>
  <dd><%= @tarea.tipo.tipo %></dd>
  <dt><strong><%= model_class.human_attribute_name(:estado_id) %>:</strong></dt>
  <dd><%= @tarea.estado.estado %></dd>
  <dt><strong><%= model_class.human_attribute_name(:prioridad_id) %>:</strong></dt>
  <dd><%= @tarea.prioridad.prioridad %></dd>
</dl>
    
<%= link_to t('.back', :default => t("helpers.links.back")),
