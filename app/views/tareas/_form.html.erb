<%= form_for @tarea,  :html => { :class => "form-horizontal tarea" } do |f| %>

  <% if @tarea.errors.any? %>
    <div id="error_expl" class="panel panel-danger">
      <div class="panel-heading">
        <h3 class="panel-title"><%= pluralize(@tarea.errors.count, "error") %> prohibited this tarea from being saved:</h3>
      </div>
      <div class="panel-body">
        <ul>
        <% @tarea.errors.full_messages.each do |msg| %>
          <li><%= msg %></li>
        <% end %>
        </ul>
      </div>
    </div>
  <% end %>


  <div class="form-group">
    <%= f.label :empleado_id, :class => 'control-label col-lg-2' %>
    <div class="col-lg-10">
    <%=f.collection_select(:empleado_id, Empleado.all, :id, :empleado, {:prompt => 'Seleccione Empleado'}) %>
      <%#= f.text_field :empleado_id, :class => 'form-control' %>
    </div>
    <%=f.error_span(:empleado_id) %>
  </div>
  <div class="form-group">
    <%= f.label :tipo_id, :class => 'control-label col-lg-2' %>
    <div class="col-lg-10">
      <%=f.collection_select(:tipo_id, Tipo.all, :id, :tipo, {:prompt => 'Seleccione Tipo'}) %>
      <%#= f.text_field :tipo_id, :class => 'form-control' %>
    </div>
    <%=f.error_span(:tipo_id) %>
  </div>
  <div class="form-group">
    <%= f.label :estado_id, :class => 'control-label col-lg-2' %>
    <div class="col-lg-10">
      <%=f.collection_select(:estado_id, Estado.all, :id, :estado) %>
      <%#= f.text_field :estado_id, :class => 'form-control' %>
    </div>
    <%=f.error_span(:estado_id) %>
  </div>
  <div class="form-group">
    <%= f.label :prioridad_id, :class => 'control-label col-lg-2' %>
    <div class="col-lg-10">
      <%=f.collection_select(:prioridad_id, Prioridad.all, :id, :prioridad) %>
      <%#= f.text_field :prioridad_id, :class => 'form-control' %>
    </div>
    <%=f.error_span(:prioridad_id) %>
  </div>
  <div class="form-group">
    <%= f.label :comentario, :class => 'control-label col-lg-2' %>
    <div class="col-lg-10">
      <%= f.text_area :comentario, :class => 'form-control', autofocus: true %>
    </div>
    <%=f.error_span(:comentario) %>
  </div>

  <div class="form-group">
    <div class="col-lg-offset-2 col-lg-10">
      <%= f.submit nil, :class => 'btn btn-primary' %>
      <%= link_to t('.cancel', :default => t("helpers.links.cancel")),
                tareas_path, :class => 'btn btn-default' %>
    </div>
  </div>

<% end %>
