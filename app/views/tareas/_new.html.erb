<!-- Modal -->
<div id="myModal2" class="modal fade" tabindex="-1" >
  <div class="modal-dialog">
  
  <!-- Modal content-->
    <div class="modal-content">
      <div class="modal-header">
        <button type="button" class="close" data-dismiss="modal">&times;</button>
        <h4 class="modal-title">Crear Nueva Tarea</h4>
      </div>
      <div class="modal-body">

<!--form // finaliza modal cabecera -->

<%= form_for @tarea, :html => { :class => "form-horizontal tarea" } do |f| %>

  <% if @tarea.errors.any? %>
    <div id="error_expl" class="panel panel-danger">
      <div class="panel-heading">
        <h3 class="panel-title"><%= pluralize(@tarea.errors.count, "error") %> prohibited this tarea from being saved:</h3>
      </div>
      <div class="panel-body">
        <ul>
        <% @tarea.errors.full_messages.each do |msg| %>
          <li><%= msg %></li>
        <% end %>
        </ul>
      </div>
    </div>
  <% end %>

<!-- inicia seleccion de club -->
  <div class="form-group">
    <%= f.label :club_id, :class => 'control-label col-lg-2' %>
    <div class="col-lg-10">
      <%#= f.collection_select(:club_id, Club.all, :id, :club) %>
      <%= f.collection_select( :club_id, Club.all, :id, :club, { :multiple => false}) %>
    </div>
    <%=f.error_span(:club_id) %>
  </div>
<!-- finaliza seleccino de club -->



<!--selecciona empleado -->

  <div class="form-group">
    <%= f.label :empleado_id, :class => 'control-label col-lg-2' %>
    <div class="col-lg-10">
    <%#if :club_id == '2' %>
    <%=f.collection_select(:empleado_id, Empleado.all, :id, :empleado, {:prompt => 'Seleccione Empleado'}) %>
    
    <%#=f.collection_select(:empleado_id, Empleado.where("club_id ='2' "), :id, :empleado, {:prompt => 'Seleccione Empleado'}) %>
      <%#= f.text_field :empleado_id, :class => 'form-control' %>
            
       <%#= link_to t(empleado_path, :class => 'btn btn-primary' %>     
       <%#= link_to "#myModal2", "myModal2", "data-toggle"="modal" %>     
        <a class="btn btn-default" href="/empleados/" role="button"> Ir a empleados </a>
       <%# end %>     
    </div>

    <%=f.error_span(:empleado_id) %>
  </div>

<!-- finaliza seleccin de empledao -->

            
  <div class="form-group">
    <%= f.label :tipo_id, :class => 'control-label col-lg-2' %>
    <div class="col-lg-10">
      <%=f.collection_select(:tipo_id, Tipo.all, :id, :tipo, {:selected => 3} ) %>
      <%#= f.text_field :tipo_id, :class => 'form-control' %>
    </div>
    <%=f.error_span(:tipo_id) %>
  </div>
  <div class="form-group">
    <%= f.label :estado_id, :class => 'control-label col-lg-2' %>
    <div class="col-lg-10">
      <%=f.collection_select(:estado_id, Estado.all, :id, :estado) %>
      <%#= f.text_field :estado_id, :class => 'form-control' %>
    </div>
    <%=f.error_span(:estado_id) %>
  </div>
  <div class="form-group">
    <%= f.label :prioridad_id, :class => 'control-label col-lg-2' %>
    <div class="col-lg-10">
      <%=f.collection_select(:prioridad_id, Prioridad.all, :id, :prioridad) %>
      <%#= f.text_field :prioridad_id, :class => 'form-control' %>
    </div>
    <%=f.error_span(:prioridad_id) %>
  </div>
  <div class="form-group">
    <%= f.label :Titulo, :class => 'control-label col-lg-2' %>
    <div class="col-lg-10">
      <%= f.text_area :comentario, :class => 'form-control', autofocus: true %>
    </div>
    <%=f.error_span(:comentario) %>
  </div>

  <div class="form-group">
    <div class="col-lg-offset-2 col-lg-10">
      <%= f.submit nil, :class => 'btn btn-primary' %>
      <%= link_to t('.cancel', :default => t("helpers.links.cancel")),
                tareas_path, :class => 'btn btn-default' %>
    </div>
  </div>

<% end %>

      </div>
<!--         <div class="modal-footer">
          <button type="button" class="btn btn-default" data-dismiss="modal">Cerrar</button>
        </div>  -->
      </div>
    </div>
  </div>